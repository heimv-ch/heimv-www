---
import { getCollection } from "astro:content";
import Breadcrumbs from "../components/breadcrumbs.astro";
import Layout from "../layouts/Layout.astro";
// import screenBook1Image from "../../assets/screen-book-1.png";
// import screenBook2Image from "../../assets/screen-book-2.png";
// import screenBookingsImage from "../../assets/screen-bookings.png";
// import screenBookingImage from "../../assets/screen-booking.png";
// import screenUsagesImage from "../../assets/screen-usages.png";
// import screenInvoicesImage from "../../assets/screen-invoices.png";
// import screenProcessesImage from "../../assets/screen-processes.png";
// import screenTenantImage from "../../assets/screen-tenant.png";

const articles = (await getCollection("articles")).filter((article) => article.data.featured);
---

<Layout title="Features">
  <div class="py-6 px-4 container max-w-5xl mx-auto">
    <Breadcrumbs links={[{ title: "Features", href: "/features" }]} />
  </div>
  <main class="container mx-auto max-w-5xl p-4 min-h-screen">
    <div class="grid place-items-center h-96">
      <h1
        class="font-heading text-[clamp(4vw,0.5rem+5vw,3rem)] leading-snug font-bold row-start-1 row-end-1 col-start-1 col-end-1 z-10"
      >
        Feature Spotlight
      </h1>

      <span
        class="text-9xl opacity-40 row-start-1 row-end-1 col-start-1 col-end-1"
        >ğŸ’¡</span
      >
    </div>
    <ul class="list-disc ps-6">
      {
        articles.map((feature) => {
          return (
            <li class="pb-8">
              <a class="block" href={`/articles/${feature.id}`}>
                <h3 class="mt-0 mb-1 font-bold underline text-heimv-700 hover:text-heimv-600">
                  {feature.data.title}
                </h3>
                <p>{feature.data.lead}</p>
              </a>
            </li>
          );
        })
      }
    </ul>
    <p class="my-5">Und noch Vieles mehr!</p>
  </main>
</Layout>
