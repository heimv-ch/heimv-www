---
import Breadcrumbs from "../components/breadcrumbs.astro";
import Layout from "./Layout.astro";
import Markdown from "./Markdown.astro";

const { frontmatter } = Astro.props;
const { version, released_at } = frontmatter;
---

<Layout title={version}>
  <div class="py-6 px-4 container max-w-5xl mx-auto">
    <Breadcrumbs
      links={[
        { title: "Releases" },
        { title: version, href: frontmatter.id },
      ]}
    />
  </div>
  <section class="container py-20 mx-auto">
    <main class="mx-auto max-w-5xl p-4 min-h-screen">
      <h1 class="text-6xl font-heading mb-5 mt-3 break-words">Version {version}</h1>
      <p class="italic">
        Ver√∂ffentlicht am {new Date(released_at).toLocaleDateString("de-CH")}
      </p>
      <div class="my-24"></div>
      <Markdown>
        <slot />
      </Markdown>
    </main>
  </section>
</Layout>
